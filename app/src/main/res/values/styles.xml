<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeNoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:itemTextAppearance">@style/AppTheme.ItemTextStyle</item>
        <item name="android:statusBarColor">@color/white_2</item>
        <item name="colorControlNormal">@color/white_2</item>
        <item name="colorControlActivated">@color/white_2</item>
        <item name="colorControlHighlight">@color/white_2</item>
    </style>

    <style name="ThemeFullScreen" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="AppTheme.ItemTextStyle" parent="@android:style/TextAppearance.Widget.IconMenu.Item">
        <item name="android:textColor">@color/colorPrimary</item>
        <!--<item name="android:fontFamily">@style/medium_bold</item>
        <item name="android:textSize">@dimen/medium</item>-->
        <item name="android:gravity">center</item>
    </style>

    <style name="font_bold">
        <item name="android:fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="font_reg">
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="font_medium">
        <item name="android:fontFamily">@font/montserrat_medium</item>
    </style>

    <!--font regular-->
    <style name="tiny_reg" parent="font_reg">
        <item name="android:textSize">@dimen/tiny</item>
    </style>

    <style name="small_reg" parent="font_reg">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="medium_reg" parent="font_reg">
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="reg_reg" parent="font_reg">
        <item name="android:textSize">@dimen/regular</item>
    </style>

    <style name="large_reg" parent="font_reg">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="ex_large_reg" parent="font_reg">
        <item name="android:textSize">@dimen/extra_large</item>
    </style>

    <style name="huge_reg" parent="font_reg">
        <item name="android:textSize">@dimen/huge</item>
    </style>

    <!--style for poppins bold-->
    <style name="tiny_bold" parent="font_bold">
        <item name="android:textSize">@dimen/tiny</item>
    </style>

    <style name="small_bold" parent="font_bold">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="reg_bold" parent="font_bold">
        <item name="android:textSize">@dimen/regular</item>
    </style>

    <style name="medium_bold" parent="font_bold">
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="large_bold" parent="font_bold">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="ex_large_bold" parent="font_bold">
        <item name="android:textSize">@dimen/extra_large</item>
    </style>

    <style name="huge_bold" parent="font_bold">
        <item name="android:textSize">@dimen/huge</item>
    </style>


    <!--style for poppins medium-->
    <style name="tiny_medium" parent="font_medium">
        <item name="android:textSize">@dimen/tiny</item>
    </style>

    <style name="small_medium" parent="font_medium">
        <item name="android:textSize">@dimen/small</item>
    </style>

    <style name="reg_medium" parent="font_medium">
        <item name="android:textSize">@dimen/regular</item>
    </style>

    <style name="medium_medium" parent="font_medium">
        <item name="android:textSize">@dimen/medium</item>
    </style>

    <style name="large_medium" parent="font_medium">
        <item name="android:textSize">@dimen/large</item>
    </style>

    <style name="ex_large_medium" parent="font_medium">
        <item name="android:textSize">@dimen/extra_large</item>
    </style>

    <style name="huge_medium" parent="font_medium">
        <item name="android:textSize">@dimen/huge</item>
    </style>

    <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Rounded_EditText" parent="small_reg">
        <item name="android:textColor">@color/gray_3</item>
        <item name="android:padding">@dimen/large_padding</item>
        <item name="android:maxLines">1</item>
        <item name="android:lines">1</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:textColorHint">@color/gray_1</item>
        <item name="android:background">@drawable/rounded_gray_solid_strock</item>
        <item name="android:layout_marginStart">@dimen/_15sdp</item>
        <item name="android:layout_marginEnd">@dimen/_15sdp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="Rounded_Red_Button" parent="medium_reg">
        <item name="android:textColor">@color/white_1</item>
        <item name="android:background">@drawable/rounded_red_square</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/medium_padding</item>
    </style>

    <!--Bottom navigation view text-->
    <style name="BottomNavigationView" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">@dimen/tiny</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

</resources>
